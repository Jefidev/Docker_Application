<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.oceane.jerome.applicationserveurbateau.ContainerOutActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chargement"
        android:id="@+id/TextViewChargement"
        android:layout_gravity="center_horizontal"
        android:textColor="#dd4e4e"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextFieldDestination"
        android:textColor="#606060"
        android:textSize="25sp"
        android:hint="Saisie de la destination"
        android:layout_weight="0.06"
        android:layout_below="@+id/TextViewChargement"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tri sur la date"
        android:id="@+id/checkBoxTri"
        android:layout_below="@+id/TextFieldDestination"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rechercher"
        android:id="@+id/ButtonRechercher"
        android:layout_gravity="center_horizontal"
        android:background="#21235f"
        android:textColor="#ffffff"
        android:layout_below="@+id/checkBoxTri"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terminer"
        android:id="@+id/ButtonTerminer"
        android:layout_gravity="center_horizontal"
        android:background="#21235f"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewContainers"
        android:layout_below="@+id/ButtonRechercher"
        android:layout_alignParentStart="true" />

</RelativeLayout>
