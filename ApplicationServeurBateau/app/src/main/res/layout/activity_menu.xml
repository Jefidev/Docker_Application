<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.oceane.jerome.applicationserveurbateau.MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Menu"
        android:id="@+id/TextViewNewBoat"
        android:layout_gravity="center_horizontal"
        android:textColor="#dd4e4e"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonOut"
        android:layout_gravity="center_horizontal"
        android:background="#01aaff"
        android:textColor="#ffffff"
        android:text="@string/Chargement"
        android:layout_below="@+id/TextViewNewBoat"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Dechargement"
        android:id="@+id/ButtonIn"
        android:layout_gravity="center_horizontal"
        android:background="#01aaff"
        android:textColor="#ffffff"
        android:layout_marginTop="19dp"
        android:singleLine="false"
        android:layout_below="@+id/ButtonOut"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NbrContainersParJour"
        android:id="@+id/ButtonStat1"
        android:layout_gravity="center_horizontal"
        android:background="#01aaff"
        android:textColor="#ffffff"
        android:singleLine="false"
        android:layout_below="@+id/ButtonIn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/RepartitionNbrContainersParSemaineParDestination"
        android:id="@+id/ButtonStat2"
        android:layout_gravity="center_horizontal"
        android:background="#01aaff"
        android:textColor="#ffffff"
        android:singleLine="false"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/ButtonStat1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TempsMoyenDocker"
        android:id="@+id/ButtonStat3"
        android:layout_gravity="center_horizontal"
        android:background="#01aaff"
        android:textColor="#ffffff"
        android:singleLine="false"
        android:layout_above="@+id/ButtonQuitter"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Quitter"
        android:id="@+id/ButtonQuitter"
        android:layout_gravity="center_horizontal"
        android:background="#21235f"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSemaine"
        android:layout_below="@+id/ButtonStat2"
        android:layout_alignParentStart="true"
        android:hint="@string/NumeroSemaine"
        android:textSize="15sp"
        android:layout_above="@+id/ButtonStat3"
        android:inputType="number"
        android:layout_alignEnd="@+id/TextViewNewBoat" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/editTextSemaine"
        android:layout_alignEnd="@+id/ButtonStat2"
        android:layout_toEndOf="@+id/TextViewNewBoat"
        android:layout_above="@+id/ButtonStat3">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Decharges"
            android:id="@+id/radioButtonIn" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Charges"
            android:id="@+id/radioButtonOut" />

    </RadioGroup>

</RelativeLayout>
